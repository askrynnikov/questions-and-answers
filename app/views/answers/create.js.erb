<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $('.answer-errors').html('<%= j message %>');
  <% end %>
<% else %>
  $('.answers').append('<%= j render 'questions/answer', question: @question, answer: @answer %>');
  //$('.answers').html('<%= j render partial: 'questions/answer', collection: @question.answers %>');
  $('#new_answer #answer_body').val('');
  $('.answer-errors').html('<%= "" %>');
<% end %>
